--  Project: AoC_Common_Tests
--
--  Purpose: Unit tests for the AoC_Common shared library

with "aoc_common.gpr";

project AoC_Common_Tests is

   for Source_Dirs use ("tests");
   for Object_Dir use "obj/tests";
   for Exec_Dir use "bin";
   for Main use ("test_runner.adb");

   package Compiler is
      for Default_Switches ("Ada") use (
         "-gnat2022",
         "-gnatyy",
         "-gnatyM120",
         "-gnatwa",
         "-gnata"
      );
   end Compiler;

   package Binder is
      for Switches ("Ada") use ("-Es");
   end Binder;

end AoC_Common_Tests;
